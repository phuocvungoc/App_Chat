            $('.van-switch').click(function() {
                $('.van-switch').toggleClass('van-switch--on');
                var check = $('.van-switch').hasClass('van-switch--on');
                if (check == true) {
                    $(".van-switch").attr("aria-checked", true);
                    document.querySelector('.van-switch').style.backgroundColor = "rgb(0, 184, 169)";
                } else {
                    $(".van-switch").attr("aria-checked", false);
                    document.querySelector('.van-switch').style = "";
                }
            });
        });
