    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.fillout-address-button__sumbit').click(function() {
                var full_name = $('.van-field__control:eq(0)').val();
                var phone_number = $('.van-field__control:eq(1)').val();
                var pin = $('.van-field__control:eq(2)').val();
                var Whatsapp = $('.van-field__control:eq(3)').val();
                var address_detail = $('.van-field__control:eq(4)').val();
                var city = $('.van-field__control:eq(5)').val();
                var Conscious = $('.van-field__control:eq(6)').val();
                var check = $('.van-switch').hasClass('van-switch--on');
                if (full_name.length < 50 && phone_number.length < 15 && pin.length < 50 && Whatsapp.length < 50 && address_detail.length <= 100 && city.length < 50 && Conscious.length < 20 && full_name != "" && phone_number != "" && pin != "" && Whatsapp != "" && address_detail != "" && city != "" && Conscious != "" && check == true) {
                    $.ajax({
                        type: "POST",
                        url: "/member/myaddress",
                        data: {
                            full_name: full_name,
                            phone_number: phone_number,
                            pin: pin,
                            Whatsapp: Whatsapp,
                            address_detail: address_detail,
                            city: city,
                            Conscious: Conscious
                        },
                        dataType: "JSON",
                        success: function(response) {
                            if (response.message == 0) {
                                $('.van-toast--text .van-toast__text').text('Bạn đã có địa chỉ rồi !');
                                $('.van-toast--text').removeClass('display-none');
                                setTimeout(() => {
                                    $('.van-toast--text').addClass('display-none');
                                }, 1000);
                            } else if (response.message == 1) {
                                $('.van-toast--text .van-toast__text').text('Thêm địa chỉ thành công');
                                $('.van-toast--text').removeClass('display-none');
                                setTimeout(() => {
                                    $('.van-toast--text').addClass('display-none');
                                    window.location.reload();
                                }, 1000);
                            } else if (response.message == "error") {
                                $('.van-toast--text .van-toast__text').text('Vui lòng nhập đúng định dạng !');
                                $('.van-toast--text').removeClass('display-none');
                                setTimeout(() => {
                                    $('.van-toast--text').addClass('display-none');
                                }, 1000);
                            }
                        }
                    });
                } else if (full_name == "" || phone_number == "" || pin == "" || Whatsapp == "" || address_detail == "" || city == "" || Conscious == "") {
                    $('.van-toast--text .van-toast__text').text('Vui lòng nhập đầy đủ thông tin');
                    $('.van-toast--text').removeClass('display-none');
                    setTimeout(() => {
                        $('.van-toast--text').addClass('display-none');
                    }, 1000);
                } else if (check == false) {
                    $('.van-toast--text .van-toast__text').text('Vui lòng xác nhận địa chỉ!');
                    $('.van-toast--text').removeClass('display-none');
                    setTimeout(() => {
                        $('.van-toast--text').addClass('display-none');
                    }, 1000);
                }
            });
        });
    </script>
    <script>
        $(document).ready(function() {
