        $('.top-selete-sub:eq(3)').click(function(e) {
            $('.main-products').addClass('display-none');
            $('.main-products:eq(3)').removeClass('display-none');
        });
        $('.top-selete-sub').click(function() {
            $('.top-selete-sub').removeClass("block_click");
            $(this).addClass("block_click");
        });
        $(document).ready(function() {
            $('.top-selete-sub').click(function(e) {
                e.preventDefault();
                $(this).addClass('active').siblings().removeClass('active');
            });
            $('.van-dialog__cancel, .van-overlay, .van-dialog__confirm').click(function(e) {
                e.preventDefault();
                $('.van-overlay, .van-dialog').addClass('display-none');
            });
        });
        $('.close').click(function(e) {
            e.preventDefault();
            $('.van-overlay, .van-dialog').removeClass('display-none');
        });
        $(window).on('load', function() {
            $('.preloader').delay(100).fadeOut('fast');
        });
    </script>
    <% if (listrechargeWaiting.length > 0) { %>
        <script>
            $('.van-dialog__confirm').click(function(e) {
                $.ajax({
                    type: "POST",
                    url: "/couleepay/closeReceipt",
                    data: {
                        id_don_hang: "<%=listrechargeWaiting[0].id_txn%>",
                    },
                    dataType: "json",
                    success: function(response) {
                        if (response.message == 1) {
                            $('.main-products:eq(0)').addClass("display-none");
                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        }
                    }
                });
            });
            $('.thanh-toan').click(function(e) {
                e.preventDefault();
                location.href = "/couleepay/<%=listrechargeWaiting[0].id_txn%>/receipt";
            });
