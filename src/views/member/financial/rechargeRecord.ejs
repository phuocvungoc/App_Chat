    <script>
        $('.top-selete-sub:eq(0)').click(function(e) {
            $('.main-products').addClass('display-none');
            $('.main-products:eq(0)').removeClass('display-none');
        });
        $('.top-selete-sub:eq(1)').click(function(e) {
            e.preventDefault();
            $('.main-products').addClass('display-none');
            $('.main-products:eq(1)').removeClass('display-none');
        });
        $('.top-selete-sub:eq(2)').click(function(e) {
